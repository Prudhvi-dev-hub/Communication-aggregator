generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Sms {
  id         String   @id @default(uuid())
  requestId  String   @unique
  to         String
  body       String?
  retryCount Int      @default(0)
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}